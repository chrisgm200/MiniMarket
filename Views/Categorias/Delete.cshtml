@model MiniMarketWebApp.Models.Categoria
@{
    ViewData["Title"] = "Eliminar Categoría";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white fw-bold">
            <i class="fas fa-trash-alt me-2"></i>Eliminar Categoría
        </div>

        <div class="card-body">
            <h5 class="mb-3">¿Estás seguro de que deseas eliminar esta categoría?</h5>

            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.IdCategoria</dd>

                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="IdCategoria" />

                <button type="submit" class="btn btn-danger me-2">
                    <i class="fas fa-trash"></i> Eliminar
                </button>

                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>
