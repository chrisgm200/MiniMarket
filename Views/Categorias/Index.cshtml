@model IEnumerable<MiniMarketWebApp.Models.Categoria>

@{
    ViewData["Title"] = "Categorías";
}

<div class="container mt-4">

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-tags me-2"></i>Gestión de Categorías</h4>
            <a asp-action="Create" class="btn btn-light btn-sm fw-bold">
                <i class="fas fa-plus-circle me-1"></i> Nueva Categoría
            </a>
        </div>

        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center text-muted my-4">
                    <i class="fas fa-info-circle fa-2x mb-2"></i>
                    <p>No hay categorías registradas aún.</p>
                </div>
            }
            else
            {
                <table class="table table-modern table-hover align-middle shadow-sm">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdCategoria</td>
                                <td>@item.Nombre</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.IdCategoria"
                                       class="btn btn-warning btn-sm btn-action btn-edit me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.IdCategoria"
                                       class="btn btn-danger btn-sm btn-action btn-delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            }
        </div>
    </div>
</div>
