@model MiniMarketWebApp.Models.Venta

@{
    ViewData["Title"] = "Detalle de Venta";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-file-invoice-dollar me-2"></i>Detalle de Venta</h4>
        </div>

        <div class="card-body">

            <!-- Información general -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <strong>ID Venta:</strong> @Model.IdVenta
                </div>
                <div class="col-md-4">
                    <strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy HH:mm")
                </div>
                <div class="col-md-4">
                    <strong>Total:</strong> S/ @Model.Total.ToString("0.00")
                </div>
            </div>

            <!-- Tabla de productos vendidos -->
            <h5 class="mb-3 text-secondary">
                <i class="fas fa-boxes me-2"></i>Productos Vendidos
            </h5>

            <table class="table table-bordered table-striped">
                <thead class="table-light">
                    <tr>
                        <th>Producto</th>
                        <th>Categoría</th>
                        <th class="text-end">Cantidad</th>
                        <th class="text-end">Precio (S/)</th>
                        <th class="text-end">Subtotal (S/)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model.Detalles)
                    {
                        <tr>
                            <td>@d.Producto.Nombre</td>
                            <td>@d.Producto.Categoria.Nombre</td>
                            <td class="text-end">@d.Cantidad</td>
                            <td class="text-end">@d.PrecioUnitario.ToString("0.00")</td>
                            <td class="text-end">@d.SubTotal.ToString("0.00")</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-end mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Regresar
                </a>
            </div>
        </div>
    </div>
</div>
