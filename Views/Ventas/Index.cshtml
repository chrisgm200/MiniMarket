@model IEnumerable<MiniMarketWebApp.Models.Venta>
@{
    ViewData["Title"] = "Ventas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary"><i class="fas fa-cash-register me-2"></i>Historial de Ventas</h2>
        <a class="btn btn-success" asp-action="Create"><i class="fas fa-plus"></i> Nueva Venta</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark text-center">
            <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Total (S/)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model)
            {
                <tr>
                    <td class="text-center">@v.IdVenta</td>
                    <td>@v.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-end fw-bold">@v.Total.ToString("0.00")</td>

                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@v.IdVenta"
                           class="btn btn-sm btn-info text-white">
                            <i class="fas fa-eye"></i> Ver Detalle
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center mt-4">Aún no hay ventas registradas.</div>
    }
</div>
